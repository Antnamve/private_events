<%= form_with(model: event) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :host, class: "form-label" %>
    <%= form.text_field :host, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :date, class: "form-label" %>
    <%= form.date_field :date, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :details, class: "form-label" %>
    <%= form.text_area :details, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.check_box :private %>
    <%= form.label :private %>
  </div>

  <div class="form-group">
    <%= form.label :attendance, class: "form-label" %>
    <%= form.text_field :attendance, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", events_path, class: "btn btn-light" %>
    <% else %>
      <%= link_to "Cancel", event_path(@event), class: "btn btn-light" %>
    <% end %>
  </div>
<% end %>
