<div 
  class="max-w-3xl mx-auto px-4 my-16"
  data-controller="test"
>
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="text-4xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight">Events</h1>
    <div class="flex items-center justify-end">
      <%= link_to "New Event", new_event_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div id="events" class="divide-y dark:text-slate-700 mb-10">
    <% @events.each do |event| %>
      <div class="py-3">
        <%= render event %>

        <%= link_to "View event", event, class: "btn-link inline-block my-3" %>
      </div>
    <% end %>
  </div>
</div>
